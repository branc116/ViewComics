<?xml version="1.0" encoding="utf-8" ?>

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Error" internalLogFile="F:\Source\NLogn\log-internal.log">

  <targets>
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} ${callsite}: ${ ${uppercase:${level}} ${message}" />
    <target xsi:type="File" name="ferror" fileName="${basedir}/logs/${shortdate}-error.log"
            layout="${longdate} ${ ${uppercase:${level}} ${message} ${exception:format=toString,Data}" />
    <target xsi:type="Console" name="console" layout="${longdate} ${ ${uppercase:${level}} ${message} ${exception:format=toString,Data}" />
    <target name="udp" xsi:type="NLogViewer" address="udp://127.0.0.1:9999" />
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" writeTo="f" />
    <logger name="*" minlevel="Error" writeTo="ferror" />
    <logger name="*" minlevel="Trace" writeTo="console" />
    <logger name="*" minlevel="Trace" writeTo="udp"/>
  </rules>
</nlog>
