@model ComicsViewer.Web.Models.Comics.ComicViewModel
@{
    ViewData["Title"] = Model.Name;
}
<div class="container-fluid">
    <div class="row">
        <h2 class="col-md-6 col-12">@Model.Name</h2>
        <h2 class="col-md-6 col-12">@Model.AllIssues.Count issues</h2>
    </div>
    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>Issue</td>
                </tr>
            </thead>
            <tbody>
                @foreach(var issue in Model.AllIssues)
                {

                    <tr>
                        <td><a href="@Url.Action("Issue", "Comics")?i=@issue.Id">@issue.Name</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
